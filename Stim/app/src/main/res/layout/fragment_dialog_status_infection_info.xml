<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/colorAccent"
    app:cardCornerRadius="10dp"
    app:cardElevation="5dp"
    app:cardMaxElevation="10dp"
    app:cardPreventCornerOverlap="true"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/icons_for_infection"
            android:textStyle="bold"
            android:fontFamily="@font/montserrat_bold"
            android:layout_gravity="center"
            android:textSize="18sp"
            android:textColor="@color/primaryTextColor"
            android:layout_marginBottom="10dp" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp">

            <ImageView
                android:id="@+id/noData"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/no_data"
                tools:ignore="ImageContrastCheck, contentDescription" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text="@string/no_infectiouspressure_found"
                android:textSize="15sp"
                android:textColor="@color/primaryTextColor"
                android:fontFamily="@font/montserrat_light"
                android:layout_toEndOf="@+id/noData"
                android:layout_centerVertical="true" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp">

            <ImageView
                android:id="@+id/noInfection"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/checkmark"
                tools:ignore="ImageContrastCheck, contentDescription" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text="@string/No_infection_found"
                android:textSize="15sp"
                android:textColor="@color/primaryTextColor"
                android:fontFamily="@font/montserrat_light"
                android:layout_toEndOf="@+id/noInfection"
                android:layout_centerVertical="true" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp">

            <ImageView
                android:id="@+id/decrease"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/arrow_down"
                tools:ignore="ImageContrastCheck, contentDescription" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text="@string/Significant_infection_decrease"
                android:textSize="15sp"
                android:textColor="@color/primaryTextColor"
                android:fontFamily="@font/montserrat_light"
                android:layout_toEndOf="@+id/decrease"
                android:layout_centerVertical="true" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp">

            <ImageView
                android:id="@+id/lavSmitte"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/no_change"
                tools:ignore="ImageContrastCheck, contentDescription" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text="@string/Low_infection"
                android:textSize="15sp"
                android:textColor="@color/primaryTextColor"
                android:fontFamily="@font/montserrat_light"
                android:layout_toEndOf="@+id/lavSmitte"
                android:layout_centerVertical="true" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp">

            <ImageView
                android:id="@+id/increase"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/arrow_up"
                tools:ignore="ImageContrastCheck, contentDescription" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text="@string/singificant_infectionincrease"
                android:textSize="15sp"
                android:textColor="@color/primaryTextColor"
                android:fontFamily="@font/montserrat_light"
                android:layout_toEndOf="@+id/increase"
                android:layout_centerVertical="true" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/high"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/danger"
                tools:ignore="ImageContrastCheck, contentDescription" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text="@string/high_infection"
                android:textSize="15sp"
                android:textColor="@color/primaryTextColor"
                android:fontFamily="@font/montserrat_light"
                android:layout_toEndOf="@+id/high"
                android:layout_centerVertical="true" />

        </RelativeLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>