<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/openingLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_blue"
    android:backgroundTint="@color/skyblue"
    android:backgroundTintMode="multiply"
    android:clickable="true"
    android:focusable="true"
    android:focusableInTouchMode="true">

    <TextView
        android:id="@+id/tutorial_title1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/tutorial_img"
        android:layout_centerInParent="true"
        android:fontFamily="@font/overwave"
        android:gravity="center"
        android:text="@string/welcome_to_stim"
        android:textColor="@color/white"
        android:textSize="50sp"
        android:layout_marginBottom="20dp" />

    <ImageView
        android:id="@+id/tutorial_img"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_centerInParent="true"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:src="@drawable/slide_1"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/tutorial_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:fontFamily="@font/montserrat_semibold"
        android:gravity="center"
        android:text="@string/tutorial_slide_1_text"
        android:textColor="@color/secondaryTextColor"
        android:textSize="20sp"
        android:layout_below="@id/tutorial_img"
        android:layout_margin="20dp" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="30dp"
        android:layout_centerHorizontal="true">

        <ImageView
            android:id="@+id/circle1"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginEnd="10dp"
            android:src="@drawable/darkcircle"
            tools:ignore="ContentDescription,ImageContrastCheck" />

        <ImageView
            android:id="@+id/circle2"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:src="@drawable/lightcircle"
            android:layout_toEndOf="@id/circle1"
            android:layout_marginEnd="10dp"
            tools:ignore="ContentDescription" />

        <ImageView
            android:id="@+id/circle3"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:src="@drawable/lightcircle"
            android:layout_toEndOf="@id/circle2"
            android:layout_marginEnd="10dp"
            tools:ignore="ContentDescription" />

        <ImageView
            android:id="@+id/circle4"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginEnd="10dp"
            android:src="@drawable/lightcircle"
            android:layout_toEndOf="@id/circle3"
            tools:ignore="ContentDescription" />

        <ImageView
            android:id="@+id/circle5"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_toEndOf="@id/circle4"
            android:src="@drawable/lightcircle"
            tools:ignore="ContentDescription" />

    </RelativeLayout>


</RelativeLayout>